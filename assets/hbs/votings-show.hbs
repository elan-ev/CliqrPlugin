<header class="cliqr--page-header">
    {{#user_role 'lecturer'}}
        <nav class="cliqr--breadcrumb">
            <ol>
                <li>
                    <a href="#task-groups">
                        Cliqr
                    </a>
                </li>
                <li>
                    <a href="#task-groups-{{task.task_group_id}}">
                        Fragensammlung &laquo;{{task.task_group_title}}&raquo;
                    </a>
                </li>
                <li>
                    <a href="#task/show/{{task.id}}">
                        Frage {{#if task.title}} &laquo;{{task.title}}&raquo; {{/if}}
                    </a>
                </li>
            </ol>
        </nav>
    {{/user_role}}
</header>

<main></main>

<nav>
    {{#if isRunning}}
        {{button "stop" "Beenden" once=true}}

        <div class="appeal vote">
            <div class="url">
                Abstimmen unter
                <a class="short" href="{{cliqr_short_url}}">{{cliqr_short_url}}</a>
            </div>

            {{button "show-qr-code" "QR-Code zeigen" icon="code-qr"}}

            <div class="dialog" title="Abstimmen unter" style=display:none>
                <a class="short" href="{{cliqr_short_url}}">{{cliqr_short_url}}</a>
                <img class="qr" src="{{qr_code}}">
            </div>
        </div>

    {{else}}
        {{button "restart" "Noch einmal starten" once=true}}

        {{#if otherVotings}}
            <form class="default">
                <fieldset>
                    <legend>
                        Vergleichen mit:
                    </legend>
                    <select>
                        {{#each otherVotings}}
                            <option value="{{id}}" {{#if isRunning}}disabled{{/if}}>
                                {{moment start}}
                                {{#unless isRunning}}
                                    ({{responses_count}} Stimmen)
                                    {{^}}
                                    (l√§uft gerade)
                                {{/unless}}
                            </option>
                        {{/each}}
                    </select>
                {{fab "compare" "Vergleichen" "test"}}
                </fieldset>
            </form>
        {{/if}}
    {{/if}}
</nav>
