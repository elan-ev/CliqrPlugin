<header class="cliqr--page-header">
    {{> breadcrumb breadcrumb }}
</header>

<main></main>

<aside class="votings">
    {{#unless votings}}
        <nav class="panel">
            <p class="panel-heading">
                Abstimmungen:
            </p>
            <div class="panel-block">
                Die Frage wurde noch nie gestartet.
            </div>
            <div class="panel-block">
                {{button "start" "Abstimmung starten" icon="play" once=true color="red" class="control"}}
            </div>
        </nav>
    {{/unless}}


    {{#if votings}}
        <nav class="panel">
            <p class="panel-heading">
                Abstimmungen:
            </p>

            <div class="panel-block">
                {{#unless_state 'is_active'}}
                    {{button "start" "Abstimmung starten" icon="play" once=true  color="red" class="control"}}
    {{else}}
                    {{button "stop" "Abstimmung beenden" icon="pause" once=true color="red" class="control"}}
                {{/unless_state}}
            </div>


            {{#each votings}}
                <a class="panel-block cliqr--votings-list-item" href="#voting/{{id}}">
                    {{#if running}}
                        <span class="panel-icon">
                            {{icon 'play' color='red'}}
                        </span>
                        {{moment start label="l√§uft gerade"}}
                    {{else}}
                        <span class="panel-icon">
                            {{icon 'vote'}}
                        </span>
                        {{moment start}}
                    {{/if}}

                    <span class="bubble" data-tooltip="{{responses_count}} Stimmen">{{responses_count}}</span>
                </a>
            {{/each}}
        </nav>
    {{/if}}
</aside>
